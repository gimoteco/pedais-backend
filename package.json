{
    "name": "pedais-backend",
    "version": "0.0.1",
    "description": "The backend for pedais app",
    "main": "index.js",
    "scripts": {
        "start-dev-server": "ts-node api/server.ts",
        "start": "nodemon",
        "build": "tsc",
        "test": "jest",
        "integrationTest": "cross-env MONGODB_URI=mongodb://127.0.0.1:27017/pedais? jest -c jest.config.integration.js --forceExit",
        "apiTest": "cross-env MONGODB_URI=mongodb://127.0.0.1:27017/pedais jest -c jest.config.api.js --forceExit",
        "lint": "npx eslint --ext ts ./"
    },
    "engines": {
        "node": "12.x"
    },
    "author": "Guilherme Barbosa Ferreira",
    "license": "ISC",
    "dependencies": {
        "@typegoose/typegoose": "^7.0.0",
        "apollo-server-express": "^2.11.0",
        "aws-cognito-express": "^5.0.0",
        "aws-sdk": "^2.655.0",
        "cors": "^2.8.5",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "graphql": "^14.6.0",
        "mime-types": "^2.1.26",
        "mongoose": "^5.9.10",
        "reflect-metadata": "^0.1.13",
        "type-graphql": "^0.17.6",
        "typedi": "^0.8.0",
        "typescript": "^3.8.3",
        "uuid": "^7.0.3"
    },
    "nodemonConfig": {
        "ignore": [
            ".git",
            "node_modules"
        ],
        "watch": [
            "**"
        ],
        "exec": "npm run start-dev-server",
        "ext": "ts"
    },
    "devDependencies": {
        "@types/express": "^4.17.4",
        "@types/graphql": "^14.5.0",
        "@types/jest": "^25.2.1",
        "@types/mongoose": "^5.7.12",
        "@types/node": "^13.11.0",
        "@typescript-eslint/eslint-plugin": "^2.28.0",
        "@typescript-eslint/parser": "^2.28.0",
        "apollo-boost": "^0.4.7",
        "aws-amplify": "^3.0.8",
        "cross-env": "^7.0.2",
        "eslint": "^6.8.0",
        "jest": "^25.2.7",
        "mongodb-memory-server": "^6.5.2",
        "node-fetch": "^2.6.0",
        "nodemon": "^2.0.2",
        "ts-jest": "^25.3.1",
        "ts-node": "^8.8.2"
    }
}
